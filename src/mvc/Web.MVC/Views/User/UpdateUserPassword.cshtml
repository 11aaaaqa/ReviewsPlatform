@model Web.MVC.DTOs.user.UpdateUserPasswordDto
<link rel="stylesheet" href="~/css/user/update-user-password.css"/>

<div style="text-align: center;">
    <h4>Обновление пароля</h4>
    <form method="post" asp-controller="User" asp-action="UpdateUserPassword" style="display: flex; flex-direction: column; align-items: center;">
        <div class="update-password-error-info-block">
            <div asp-validation-summary="ModelOnly"></div>
            <span class="model-error" asp-validation-for="NewPassword"></span>
            <span class="model-error" asp-validation-for="ConfirmNewPassword"></span>
        </div>

        <input type="hidden" asp-for="UserId"/>
        <input type="hidden" asp-for="Token"/>

        <div>
            <input class="update-password-input" asp-for="NewPassword" placeholder="Новый пароль" required />
        </div>

        <div style="margin: 7px 0 13px 0 ">
            <input class="update-password-input" asp-for="ConfirmNewPassword" placeholder="Подтвердите пароль" required />
        </div>
        
        <div>
            <input class="btn" type="submit" value="Сохранить" />
        </div>
        
    </form>
</div>